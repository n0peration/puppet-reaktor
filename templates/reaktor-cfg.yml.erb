---
address              : <%= scope['::reaktor::address'] %>
port                 : <%= scope['::reaktor::port'] %>
<%- if scope['::reaktor::daemonize'] -%>
servers              : <%= scope['::reaktor::servers'] %>
<%- end -%>
max_conns            : <%= scope['::reaktor::max_conns'] %>
max_persistent_conns : <%= scope['::reaktor::max_persistent_conns'] %>
timeout              : <%= scope['::reaktor::timeout'] %>
environment          : <%= scope['::reaktor::environment'] %>
pid                  : <%= scope['::reaktor::pidfile'] %>
log                  : <%= scope['::reaktor::log'] %>
daemonize            : <%= scope['::reaktor::daemonize'] %>
